{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
    <h3>Bienvenue dans le royaume des sushis !</h3>

    <div id="carouselExampleInterval" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active" data-bs-interval="2000">
                <img src="{{asset('images/food-3581341_640.jpg')}}" class="d-block w-100 h-100" alt="...">
            </div>
            <div class="carousel-item" data-bs-interval="2000">
                <img src="{{asset('images/sushi-4956246_640.jpg')}}" class="d-block w-100 h-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="images/sushi-1618638_640.jpg" class="d-block w-100 h-100" alt="...">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleInterval" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleInterval" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>


    <section class="presentation-restaurant">
        <div class="container-presentation">


        </div>
    </section>

    <section class="presentation-products">
        <div class="d-flex flex-column mt-4">
            <h3> La liste de nos Produits : </h3>
            <div class="d-flex m-auto col-6 col-md-2">
                <form class="" action="{{ path('app_filter') }}" >
                    <div class=" d-flex flex-row ">
                        <select class ="form-select form-select-sm" id="filterlist" name="filterlist" >
                            <option value="price_desc">Ordre Décroissant</option>
                            <option value="price_asc">Ordre Croissant</option>
                            <option value="name_asc">Ordre Alphabétique</option>
                            <option value="name_desc">Z-A</option>
                        </select>
                        <button class="btn btn-primary" type="submit">Valider</button>
                    </div>
                    <div class=" ">
                        <p>Min
                            <span id="minView">{{minRange}}</span>
                        </p>
                        <div id="slider" class="slider"></div>
                        <p>Max
                            <span id="maxView">{{maxRange}}</span>
                        </p>

                        <input id="minHidden" type="hidden" name="minPrice" value="{{minRange}}">
                        <input id="maxHidden" type="hidden" name="maxPrice" value="{{maxRange}}">
                    </div>
                </form>
            </div>
            <div class=" container">
                {% for product in products %}
                    <div class="containerCardGame">
                        <div class="cardGame shadow-sm text-center mt-3"  >
                            <div class="cardImg">
                                <img class="card-img-top" style="max-width: 100%" src="{{ asset('uploads/'~product.image) }}" alt="">
                            </div>

                            <div class="cardBody">
                                <h3 class=" mt-4 card-title">{{product.name}}</h3>
                                <p class="w-75  pt-4 m-auto card-text">{{ product.description }}</p>
                                <p class="">{{ codeTva[product.codeTva] }}</p>
                                <p class="w-75  pt-4 m-auto card-text mb-3">
                                    {{ (product.price/100)| format_currency('EUR',locale="fr")}}
                                </p>
                                <div class="d-flex flex-column">
                                    <form>
                                        {% if app.session.get("cart")[product.id] is not defined %}
                                            <input type="number" min="1"
                                                   name="quantity" class="quantity w-50 m-auto mb-3"/>
                                            <button type="submit"
                                                    data-product="{{ product.id }}"
                                                    class="btn btn-primary addButton">Ajouter au panier</button>
                                        {% else %}
                                            <input type="number" min="1" name="quantity"
                                                   class="quantity w-50 m-auto mb-3"
                                                   value="{{ app.session.get('cart')[product.id] }}"/>
                                            <button type="submit" data-product="{{ product.id }}" class="btn btn-primary">Modifier</button>
                                        {% endif %}
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>

{% endblock %}
